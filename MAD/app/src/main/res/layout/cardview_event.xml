<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eventCardViewHome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgViewEventCoverHome"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/app_icon_your_company" />

            <TextView
                android:id="@+id/txtViewEventTitleHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="16dp"
                android:text="Event of Duy"
                android:textColor="@color/dark_blue"
                android:textSize="25dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtViewEventTimeHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Tue, Feb 27 2024 at 11:55 am"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="60dp">

                    <ImageButton
                        android:id="@+id/btnEventSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:paddingBottom="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/schedule" />

                    <TextView
                        android:id="@+id/scheduletext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:clickable="false"
                        android:text="Schedule" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="60dp">

                    <ImageButton
                        android:id="@+id/btnEventask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:paddingBottom="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/task" />

                    <TextView
                        android:id="@+id/texhj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:clickable="false"
                        android:text="Task" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="60dp">

                    <ImageButton
                        android:id="@+id/btnEventGuests"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:paddingBottom="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/guest" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:clickable="false"
                        android:text="Guests" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="60dp">=

                    <ImageButton
                        android:id="@+id/btnEventMore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:paddingBottom="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/more" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:clickable="false"
                        android:text="More" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>