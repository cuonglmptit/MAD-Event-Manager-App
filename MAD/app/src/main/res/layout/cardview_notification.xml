<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardviewNotification"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_white_corner10_border_gray"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtViewNotificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:gravity="left"
        android:text="Thông báo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgViewNotificationIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/new_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtViewNotificationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:lines="3"
        android:maxLines="3"
        android:padding="5dp"
        android:text="Nội dung thông báo sẽ được hiển thị ở đây."
        android:textSize="16sp" />
</RelativeLayout>
