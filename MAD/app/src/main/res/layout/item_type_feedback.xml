<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/white_light_border_corner"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp">
    <TextView
        android:id="@+id/txtViewFeedbackType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imgViewFeedbackType"
        android:text="Spinner"
        android:textSize="18dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="3dp"
        android:textColor="@color/black" />
    <ImageView
        android:id="@+id/imgViewFeedbackType"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txtViewFeedbackType"
        android:src="@drawable/search_icon" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
</RelativeLayout>
